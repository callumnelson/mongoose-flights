<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css" />
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <table id="list">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight No.</th>
        <th>Departure Date</th>
        <th>Departure Time</th>
        <th>Details</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach( flight => { %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs.getMonth() %> / <%= flight.departs.getDate() %> / <%= flight.departs.getFullYear() %></td>
          <td><%= flight.departs.getHours() %>:<%= flight.departs.getMinutes() < 10 ? '0' + flight.departs.getMinutes() : flight.departs.getMinutes()%></td>
          <td><a href="/flights/<%= flight._id %>">Details</a></td>
          <td>
            <form action="/flights/<%= flight._id %>?_method=DELETE"" method="POST" class="delete-form">
              <button type="submit">X</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>


<%- include('../partials/footer') %>
